<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vehicle Rental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/reservation.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Vehicle Rental</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cars">Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Rent">Rent</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reservation" asp-action="Index">Reservation</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Login">Login (Vehicle Owner)</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-controller="Account" asp-action="Signup">Sign Up for Vehicle Owner</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer class="footer mt-auto py-4 bg-dark text-white">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Section: Logos & Description -->
            <div class="col-md-4 text-center text-md-start">
                <div class="d-flex justify-content-center justify-content-md-start align-items-center mb-2">
                    <img src="~/images/icon.png" alt="Vehicle Rental Logo" class="me-2" style="height: 30px;" />
                    <img src="~/images/TCU_logo_2024.png" alt="TCU Logo" style="height: 30px;" />
                </div>
                <p class="small mb-0">Providing quality vehicle rental services and management solutions since 2025.</p>
            </div>

            <!-- Center Section: Quick Links -->
<div class="col-md-4 text-center">
    <h6 class="fw-bold text-warning">QUICK LINKS</h6>
    <ul class="list-unstyled mb-0">
        <li><a href="@Url.Action("Index", "Home")" class="text-white text-decoration-none"><i class="bi bi-chevron-right"></i> Home</a></li>
        <li><a href="@Url.Action("Cars", "Home")" class="text-white text-decoration-none"><i class="bi bi-chevron-right"></i> Cars</a></li>
        <li><a href="@Url.Action("Rent", "Home")" class="text-white text-decoration-none"><i class="bi bi-chevron-right"></i> Rent</a></li>
    </ul>
</div>


            <!-- Right Section: Social Links -->
            <div class="col-md-4 text-center text-md-end">
                <div class="mb-2">
                    <a href="https://github.com/millareskenneth/QuizzyAndroidApplication" class="text-white me-3">
                        <i class="bi bi-github"></i> GitHub
                    </a>
                    <a href="@Url.Action("About", "Home")" class="text-white me-3">
                        <i class="bi bi-info-circle"></i> About
                    </a>
                    <a href="@Url.Action("Contact", "Home")" class="text-white">
                        <i class="bi bi-envelope"></i> Contact
                    </a>
                </div>
                <p class="small mb-0">&copy; @DateTime.Now.Year G5Bit. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

