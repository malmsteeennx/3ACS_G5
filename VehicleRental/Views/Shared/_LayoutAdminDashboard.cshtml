<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - Vehicle Rental</title>

    <!-- ✅ Bootstrap & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- ✅ Custom CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div id="loader">
        <div class="spinner"></div>
    </div>
    <!-- ✅ Admin Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-shield-lock"></i> Admin Panel
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar"
                        aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="adminNavbar">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="btn btn-outline-light me-2" asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-warning me-2" asp-controller="Admin" asp-action="CarApprovals">
                                <i class="bi bi-card-checklist"></i> Car Approvals
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-danger" asp-controller="Admin" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Log Out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ Enhanced Footer -->
    <footer class="footer bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="text-uppercase mb-3">Vehicle Rental</h5>
                    <p class="small">
                        Providing quality vehicle rental services and management solutions since 2025.
                    </p>
                    <div class="d-flex gap-2 mt-3">
                        <a href="#" class="text-white" title="Facebook">
                            <i class="fab fa-facebook-f fa-lg"></i>
                        </a>
                        <a href="#" class="text-white" title="Twitter">
                            <i class="fab fa-twitter fa-lg"></i>
                        </a>
                        <a href="#" class="text-white" title="Instagram">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                        <a href="#" class="text-white" title="LinkedIn">
                            <i class="fab fa-linkedin-in fa-lg"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="text-uppercase mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-white-50 text-decoration-none" asp-controller="Admin" asp-action="Index"><i class="bi bi-chevron-right"></i> Dashboard</a></li>
                        <li><a class="text-white-50 text-decoration-none" asp-controller="Admin" asp-action="CarApprovals"><i class="bi bi-chevron-right"></i> Car Approvals</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="text-uppercase mb-3">Contact</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-geo-alt-fill me-2"></i> 123 Rental Street, City, Country</li>
                        <li class="mb-2"><i class="bi bi-telephone-fill me-2"></i> +1 (555) 123-4567</li>
                        <li class="mb-2"><i class="bi bi-envelope-fill me-2"></i> admin@vehiclerental.com</li>
                    </ul>
                </div>
            </div>
            <hr class="my-3 bg-secondary">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="small mb-0">&copy; @DateTime.Now.Year - Vehicle Rental Admin Panel. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="small mb-0">
                        <a href="#" class="text-white-50 text-decoration-none me-3">Privacy Policy</a>
                        <a href="#" class="text-white-50 text-decoration-none me-3">Terms of Service</a>
                        <a href="#" class="text-white-50 text-decoration-none">Help</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- ✅ Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
