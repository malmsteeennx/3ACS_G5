@{
    ViewData["Title"] = "Vehicle Rental";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- ✅ Hero Section -->
<div class="hero">
    <div class="hero-content text-center">
        <h1>Find Your Perfect Ride</h1>
        <p>
            Explore our wide range of cars and enjoy the freedom of the open road.
            Whether you're looking for a compact car for city driving or an SUV for a family adventure, we've got you covered.
        </p>
        <a asp-controller="Home" asp-action="Rent" class="btn btn-primary">Book Now</a>
    </div>
</div>

<!-- ✅ Advertisements Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Advertisements</h2>

    <div class="row mb-4 align-items-center">
        <div class="col-md-4">
            <img src="~/images/ad1.png" class="img-fluid ad-img" alt="Weekend Getaway Deals">
        </div>
        <div class="col-md-8">
            <h3 class="ad-title">Weekend Getaway Deals</h3>
            <p class="ad-text">
                🚗 Looking for the perfect ride for your weekend escape? Enjoy exclusive weekend rates and hit the road in style!
                Whether it’s a scenic drive, a relaxing beach retreat, or an exciting city adventure, we’ve got the perfect vehicle for you.
                <br><br>
                ✨ Affordable Rates • 🚘 Wide Selection • 📅 Flexible Rental Periods
                <br><br>
                Book now and make your getaway unforgettable!
            </p>
        </div>
    </div>

    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h3 class="ad-title">Luxury Cars for Less</h3>
            <p class="ad-text">
                ✨ Drive in Style, Pay Less! ✨
                Experience ultimate comfort and sophistication at an affordable price. Whether you need a ride for business, a special occasion, or just want to cruise in style, we've got the perfect luxury car for you.
                <br><br>
                🚗 High-end Vehicles • 💎 Impeccable Interiors • 📅 Flexible Rental Plans
                <br><br>
                Book now and elevate your ride! 🚘💨
            </p>
        </div>
        <div class="col-md-4">
            <img src="~/images/ad2.png" class="img-fluid ad-img" alt="Luxury Cars">
        </div>
    </div>

    <div class="row mb-4 align-items-center">
        <div class="col-md-4">
            <img src="~/images/ad3.png" class="img-fluid ad-img" alt="Special Offer on SUVs">
        </div>
        <div class="col-md-8">
            <h3 class="ad-title">Special Offer on SUVs</h3>
            <p class="ad-text">
                Need a spacious and reliable ride for your next adventure? Our premium SUVs offer performance, safety, and comfort at unbeatable prices.
                <br><br>
                ✅ Comfort & Space • ✅ Versatility • ✅ Safety & Performance
                <br><br>
                📅 Limited-Time Offer – Book now and save big on your next SUV rental! 🚙💨
            </p>
        </div>
    </div>
</div>

<!-- ✅ About Us Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">About Us</h2>
    <div class="about-us-slider">
        <div class="about-us-slide active">
            <h2>Who We Are</h2>
            <p>We provide a seamless and hassle-free car rental experience with a wide selection of vehicles for every need.</p>
        </div>
        <div class="about-us-slide">
            <h2>Our Mission</h2>
            <p>We make vehicle rentals affordable, convenient, and accessible with well-maintained vehicles and top-tier customer support.</p>
        </div>
        <div class="about-us-slide">
            <h2>Why Choose Us?</h2>
            <p>
                ✅ Wide Selection • ✅ Affordable Rates • ✅ Easy Booking • ✅ Reliable Support
            </p>
        </div>
        <div class="about-us-slide">
            <h2>Our Commitment</h2>
            <p>All our vehicles undergo regular maintenance and inspection to ensure your safety on the road. 🚗 Book your ride today!</p>
        </div>
    </div>
</div>

<!-- ✅ Testimonials Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Testimonials</h2>
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm text-center">
                <img src="~/images/lebron.png" class="card-img-top reviewer-img" alt="LeBron James">
                <div class="card-body">
                    <h5 class="card-title">LeBron James</h5>
                    <p class="card-text">"The service was top-tier! Smooth process, no hassle. Big props to the team!" 🚗🔥</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm text-center">
                <img src="~/images/woke.jpg" class="card-img-top reviewer-img" alt="Jane Smith">
                <div class="card-body">
                    <h5 class="card-title">Jane Smith</h5>
                    <p class="pronoun-text">they/them</p>
                    <p class="card-text">"Wonderful experience! Staff was welcoming, car was perfect. Highly recommended!" 🌈🚗💜</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm text-center">
                <img src="~/images/furry.jpg" class="card-img-top reviewer-img" alt="Christofer Furry">
                <div class="card-body">
                    <h5 class="card-title">Christofer Furry</h5>
                    <p class="card-text">"Fantastic cars, super affordable rates! Will rent again!" 🐺🚗✨</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm text-center">
                <img src="~/images/tylerjpeg.jpeg" class="card-img-top reviewer-img" alt="Tyler The Creator">
                <div class="card-body">
                    <h5 class="card-title">Tyler The Creator</h5>
                    <p class="card-text">"Mad easy booking, no stress. Clean car, smooth ride. This the spot!"</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/slider.js" asp-append-version="true"></script>
}
