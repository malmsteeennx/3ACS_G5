@{
    ViewData["Title"] = "Rent a Car";
}

<link rel="stylesheet" href="~/css/rent.css" asp-append-version="true">


<div class="container mt-4">
    <h1 class="text-center mb-4">Rent a Car You Want</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.AvailableVehicles != null && ViewBag.AvailableVehicles.Count > 0)
    {
        <div class="row">
            @foreach (var vehicle in ViewBag.AvailableVehicles)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@vehicle.Image" class="card-img-top" alt="@vehicle.Name"
                             onerror="this.src='/images/default-car.png'">
                        <div class="card-body text-center">
                            <h5 class="card-title">@vehicle.Name</h5>

                            <p class="card-text">
                                @if (!string.IsNullOrEmpty(vehicle.Model))
                                {
                                    <span class="d-block"><strong>Model:</strong> @vehicle.Model</span>
                                }
                                @if (vehicle.Year > 0)
                                {
                                    <span class="d-block"><strong>Year:</strong> @vehicle.Year</span>
                                }
                                @if (!string.IsNullOrEmpty(vehicle.FuelType))
                                {
                                    <span class="d-block"><strong>Fuel:</strong> @vehicle.FuelType</span>
                                }
                            </p>

                            <p class="fw-bold text-success">Price: $@vehicle.Price/day</p>
                            <p class="text-muted"><strong>Owner:</strong> @(vehicle.Owner?.Name ?? "Unknown")</p>

                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                    data-bs-target="#rentModal"
                                    data-vehicle-id="@vehicle.Id"
                                    data-vehicle-name="@vehicle.Name"
                                    data-vehicle-price="@vehicle.Price">
                                Rent Now
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="bi bi-exclamation-triangle me-2"></i> No vehicles available for rent at the moment.
        </div>
    }
</div>

<!-- Rent Modal -->
<div class="modal fade" id="rentModal" tabindex="-1" aria-labelledby="rentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rentModalLabel">Rent Vehicle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Rent" asp-action="RentVehicle" method="post">
                <div class="modal-body">
                    <input type="hidden" id="vehicleId" name="vehicleId" />
                    <input type="hidden" id="userId" name="userId" value="1" /> <!-- Default user ID -->

                    <div class="mb-3">
                        <label class="form-label">Vehicle:</label>
                        <p id="vehicleName" class="fw-bold"></p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Daily Rate:</label>
                        <p id="vehiclePrice" class="fw-bold text-success"></p>
                    </div>

                    <div class="mb-3">
                        <label for="rentalDays" class="form-label">Number of Days:</label>
                        <input type="number" class="form-control" id="rentalDays" name="rentalDays" min="1" value="1">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Total Cost:</label>
                        <p id="totalCost" class="fw-bold text-primary"></p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Confirm Rental</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/rent.js" asp-append-version="true"></script>
}

