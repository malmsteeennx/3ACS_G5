@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- ✅ Link External CSS -->
<link rel="stylesheet" href="~/css/addcar.css" asp-append-version="true" />

<div class="container">
    <!-- ✅ Top Navbar -->
    <div class="text-center my-4">
        <h2 class="text-dark fw-bold">WELCOME! @ViewBag.OwnerName</h2>
    </div>

    <!-- ✅ Show Messages if Car was Added or Failed -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- ✅ Add Car Form Container -->
    <div class="add-car-container mx-auto">
        <h2 class="text-center fw-bold">Add New Car</h2>
        <hr>

        <form method="post" asp-action="AddCar" asp-controller="Owner">
            <input type="hidden" name="OwnerId" value="@ViewBag.OwnerId">

            <div class="mb-3">
                <label class="form-label fw-bold">Car Name</label>
                <input type="text" class="form-control" name="Name" required placeholder="Enter car name">
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Model</label>
                <input type="text" class="form-control" name="Model" required placeholder="Enter car model">
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Year</label>
                <input type="number" class="form-control" name="Year" min="1990" max="2025" required placeholder="Enter year">
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Seat Capacity</label>
                <input type="number" class="form-control" name="SeatCapacity" min="1" required placeholder="Enter seat capacity">
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Fuel Type</label>
                <select class="form-select" name="FuelType" required>
                    <option value="" disabled selected>Select Fuel Type</option>
                    <option value="Gasoline">Gasoline</option>
                    <option value="Diesel">Diesel</option>
                    <option value="Electric">Electric</option>
                    <option value="Hybrid">Hybrid</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Price (per day)</label>
                <input type="number" class="form-control" name="Price" step="0.01" min="0" required placeholder="Enter price per day">
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Image URL (Optional)</label>
                <input type="text" class="form-control" name="Image" placeholder="Enter image URL">
            </div>

            <!-- ✅ Available Days Section -->
            <div class="mb-3">
                <label class="form-label fw-bold">Available Days</label>
                <div class="d-flex flex-wrap">
                    <div class="form-check me-3">
                        <input class="form-check-input day-checkbox" type="checkbox" value="Monday" id="monday" checked>
                        <label class="form-check-label" for="monday">Monday</label>
                    </div>
                    <div class="form-check me-3">
                        <input class="form-check-input day-checkbox" type="checkbox" value="Tuesday" id="tuesday" checked>
                        <label class="form-check-label" for="tuesday">Tuesday</label>
                    </div>
                    <div class="form-check me-3">
                        <input class="form-check-input day-checkbox" type="checkbox" value="Wednesday" id="wednesday" checked>
                        <label class="form-check-label" for="wednesday">Wednesday</label>
                    </div>
                    <div class="form-check me-3">
                        <input class="form-check-input day-checkbox" type="checkbox" value="Thursday" id="thursday" checked>
                        <label class="form-check-label" for="thursday">Thursday</label>
                    </div>
                    <div class="form-check me-3">
                        <input class="form-check-input day-checkbox" type="checkbox" value="Friday" id="friday" checked>
                        <label class="form-check-label" for="friday">Friday</label>
                    </div>
                    <div class="form-check me-3">
                        <input class="form-check-input day-checkbox" type="checkbox" value="Saturday" id="saturday" checked>
                        <label class="form-check-label" for="saturday">Saturday</label>
                    </div>
                    <div class="form-check me-3">
                        <input class="form-check-input day-checkbox" type="checkbox" value="Sunday" id="sunday" checked>
                        <label class="form-check-label" for="sunday">Sunday</label>
                    </div>
                </div>
                <input type="hidden" name="AvailableDays" id="AvailableDays">
            </div>

            <div class="d-flex justify-content-between">
                <button type="reset" class="btn btn-outline-secondary">Clear</button>
                <button type="submit" class="btn btn-custom">Add</button>
            </div>
        </form>

        <!-- ✅ Back to Dashboard -->
        <div class="text-center mt-3">
            <a asp-action="Dashboard" class="btn btn-outline-dark">← Back to Dashboard</a>
        </div>
    </div>
</div>

<!-- ✅ JavaScript to Collect Selected Days Before Form Submission -->
<script>
    document.querySelector("form").addEventListener("submit", function (event) {
        let selectedDays = [];
        document.querySelectorAll(".day-checkbox:checked").forEach((checkbox) => {
            selectedDays.push(checkbox.value);
        });

        document.getElementById("AvailableDays").value = selectedDays.join(",");
    });
</script>
