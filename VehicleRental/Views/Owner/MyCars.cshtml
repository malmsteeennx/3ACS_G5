@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- ✅ Link External CSS -->
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />


<div class="container-fluid dashboard-container p-4">
    <!-- ✅ Navbar with Owner's Name -->
    <div class="d-flex justify-content-between align-items-center navbar-custom mb-4">
        <h2 class="text-dark fw-bold">My Vehicles</h2>
    </div>

    <div class="row">
        @if (ViewBag.MyVehicles != null && ViewBag.MyVehicles.Count > 0)
        {
            @foreach (var vehicle in ViewBag.MyVehicles)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card shadow-sm border-0">
                        <img src="~/images/@vehicle.Image" class="card-img-top" alt="@vehicle.Name">
                        <div class="card-body text-center">
                            <h5 class="fw-bold">@vehicle.Name</h5>
                            <p class="text-muted">Model: @vehicle.Model | Year: @vehicle.Year</p>
                            <p class="text-muted">Seats: @vehicle.SeatCapacity | Fuel: @vehicle.FuelType</p>
                            <p class="fw-bold text-success">Price: $@vehicle.Price/day</p>
                            <p class="fw-bold @(vehicle.Status == "Available" ? "text-success" : "text-danger")">
                                Status: @vehicle.Status
                            </p>

                            <!-- ✅ Action Buttons -->
                            <div class="d-flex justify-content-center">
                                <a asp-action="EditVehicle" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning mx-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="DeleteVehicle" asp-route-id="@vehicle.Id" class="btn btn-sm btn-danger mx-1" onclick="return confirm('Are you sure you want to delete this vehicle?')">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- ✅ No Vehicles Placeholder -->
            <div class="col-12 text-center text-muted">
                <i class="fas fa-car fa-3x mb-3"></i>
                <p>No vehicles added yet.</p>
                <a asp-action="AddCar" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add a Vehicle
                </a>
            </div>
        }
    </div>
</div>
